# Excel Translation API 設定ファイル
# このファイルをコピーして settings.yaml として使用してください

# 翻訳対象言語
target_languages:
  - en
  - zh

# デフォルトLLMプロバイダー (claude, gemini, gpt4)
default_provider: claude

# 品質モード (draft, standard, thorough)
# - draft: 1st passのみ（高速・低コスト）
# - standard: 1st + 2nd + 3rd pass（推奨）
# - thorough: 全パス（高品質・高コスト）
quality_mode: standard

# チャンクサイズ（トークン数）
chunk_size_tokens: 2000

# リトライ回数上限
max_retries: 3

# コスト上限（USD、nullで無制限）
cost_limit_usd: null

# 文字数制限（nullで無制限）
char_limit: null

# 進捗保存ディレクトリ
progress_dir: .translation_progress

# 文脈参照行数
context_lines: 3

# API設定（環境変数を推奨）
# api:
#   anthropic_api_key: your-api-key
#   google_api_key: your-api-key
#   openai_api_key: your-api-key
